      justify-content: center;
      gap: 30px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .footer-link {
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      transition: color 0.3s;
    }

    .footer-link:hover {
      color: white;
    }

    .footer-bottom {
      margin-top: 30px;
      padding-top: 30px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.6);
    }

    /* Responsive */
    @media (max-width: 768px) {
      nav {
        padding: 15px 20px;
        flex-wrap: wrap;
      }

      .nav-links {
        gap: 15px;
        flex-wrap: wrap;
      }

      .hero h1 {
        font-size: 2.5rem;
      }

      .hero .subtitle {
